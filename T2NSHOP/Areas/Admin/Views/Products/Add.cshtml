@section scripts{
    <script>
        
        $(document).ready(function () {
            
            $('.auto').autoNumeric('init');
            $('#demoPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPrice').autoNumeric('get');
                $('#Price').val(demoGet);
                $('#Price').autoNumeric('set', demoGet);
            });
            $('#demoPriceSale').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPriceSale').autoNumeric('get');
                $('#PriceSale').val(demoGet);
                $('#PriceSale').autoNumeric('set', demoGet);
            });
            $('#demoOriginalPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoOriginalPrice').autoNumeric('get');
                $('#OriginalPrice').val(demoGet);
                $('#OriginalPrice').autoNumeric('set', demoGet);
            });
            CKEDITOR.replace('txtDetail', {
                custeomConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span'
            });

            $('body').on('click', '.btnXoaAnh', function () {
                var conf = confirm('Bạn có muốn xóa ảnh này không?');
                if (conf === true) {
                    var _id = $(this).data('id');
                    $('#trow_' + _id).fadeTo('fast', 0.5, function () {
                        $(this).slideUp('fast', function () {
                            $(this).remove();
                        });
                    });
                    var temp = $('#tCurrentId').val();
                    var currentId = parseInt(temp) - 1;
                    $('#tCurrentId').val(currentId);
                }
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl);
            };
            finder.popup();
        }
        function addImageProduct(url) {
            var temp = $('#tCurrentId').val();
            var icolor = $('#imagecolorselect').val();
            var currentId = parseInt(temp) + 1;
            var str = "";
            if (currentId == 1) {
                str += `<tr id="trow_${currentId}">
                         <td class="text-center" style="width:50px;">${currentId}</td>
                         <td class="text-center" style="width:50px;"><img width="80" src="${url}"/><input type="hidden" value=${url} name="Images" /></td>
                         <td class="text-center" style="width:50px;"><input type="radio" value = "${currentId}" name="rDefault" checked="checked"/></td>
                         <td class="text-center" style="width:50px;"><input type="text" name="icolor" value = "${icolor}" style="width:80px;"/></td>
                         <td class="text-center" style="width:50px;"><a href="#" data-id=${currentId} class="btn btn-sm btn-danger btnXoaAnh" >Xóa</a></td>
                     </tr>`;
            }
            else {
                str += `<tr id="trow_${currentId}">
                         <td class="text-center" style="width:50px;">${currentId}</td>
                         <td class="text-center" style="width:50px;"><img width="80" src="${url}"/><input type="hidden" value=${url} name="Images" /></td>
                         <td class="text-center" style="width:50px;"><input type="radio" name="rDefault" value = "${currentId}"/></td>
                         <td class="text-center" style="width:50px;"><input type="text" name="icolor" value = "${icolor}" style="width:80px;"/></td>
                         <td class="text-center" style="width:50px;"><a href="#" data-id=${currentId} class="btn btn-sm btn-danger btnXoaAnh">Xóa</a></td>
                     </tr>`;
            }
            $('#tbHtml').append(str);
            $('#tCurrentId').val(currentId);
        }
        function addColorSizeQuantity() {
            var dataSelectC = $('#colorselect').val();
            var dataSize = $('#sizeselect').val();
            if (dataSize == "shoes") {
                var dataSelectS = $('#shoesOptions').val();
            } else if (dataSize == "shirt") {
                var dataSelectS = $('#shirtOptions').val();
            } else if (dataSize == "ball") {
                var dataSelectS = $('#ballOptions').val();
            } else {
                var dataSelectS = $('#shirtOptions').val();
            }
            var dataSelectQ = $('#quantityct').val();
            var temp = $('#tCurrentIds').val();
            var currentId = parseInt(temp) + 1;
            var str = `
                            <tr id="trow_${currentId}">
                                <td class="text-center" style="width:50px;"> ${currentId} </td>
                                <td class="form text-center" style="width:50px;"><input  style="font-size: revert;font-family: revert;" type="text" name="SeColor" value = "${dataSelectC}"/></td>
                                <td class="form text-center" style="width:50px;"><input  style="font-size: revert;font-family: revert;" type="text" name="SeSize" value = "${dataSelectS}"/></td>
                                <td class="form text-center" style="width:50px;"><input  style="font-size: revert;font-family: revert;" type="text" name="SeQuantity" value = "${dataSelectQ}"/></td>
                                <td class="form text-center" style="width:50px;">
                                    <button class="btn btn-sm btn-danger" onclick="removeRow(this)">Xóa</button>
                                </td>
                            </tr>
                          `;
            $('#tbHtmls').append(str);
            $('#tCurrentIds').val(currentId);
        }
        function toggleOptions() {
            var selectElement = document.getElementById("sizeselect");
            var selectedValue = selectElement.value;

            var shoesOptions = document.getElementById("shoesOptions");

            if (selectedValue === "shirt") {
                shirtOptions.style.display = "block";
                shoesOptions.style.display = "none";
                ballOptions.style.display = "none";
            } else if (selectedValue === "shoes"){
                shirtOptions.style.display = "none";
                shoesOptions.style.display = "block";
                ballOptions.style.display = "none";
            } else if (selectedValue === "ball") {
                shirtOptions.style.display = "none";
                shoesOptions.style.display = "none";
                ballOptions.style.display = "block";
            }
        }
    </script>
}
