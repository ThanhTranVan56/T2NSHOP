@model IEnumerable<T2NSHOP.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4" style="margin-bottom:13px;">
                        <div class="banner_item align-items-center" style="background-image: url(@item.Icon)">
                            <div class="banner_category">
                                <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)">@item.Titel</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

