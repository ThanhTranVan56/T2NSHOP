@model T2NSHOP.Models.EF.Product
@using T2NSHOP.Common
@{
    ViewBag.Title = "Detail";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">
<link href="~/Content/ProductDetailCss.css" rel="stylesheet" />

@if (Model != null)
{
    <div class="container single_product_container product-details" data-product-id="@Model.Id" data-title="@Model.ProductCategory.Titel">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/danh-muc-san-pham/@Model.ProductCategory.Alias-@Model.ProductCategoryID"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.ProductCategory.Titel</a></li>
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
                    </ul>
                </div>

            </div>
        </div>


        <div class="row product-detail-wrapper">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row product-detail-main pr_style_03 clearfix">
                    <div class="col-md-7 col-sm-12 col-xs-12 product-content-img">
                        <div class="product-gallery">
                            @Html.Action("Partial_DetailImage", "Products", new { id = Model.Id })
                        </div>
                    </div>
                    <div class="col-md-5 col-sm-12 col-xs-12 product-content-desc" id="detail-product">
                        <div class="product-title">
                            <h1>@Model.Title</h1>
                            @*<div id="idcategoryproduc" data-id="@Model.ProductCategoryID"><p>@Model.ProductCategoryID</p></div>*@

                        </div>

                        @Html.Action("Partial_DetailAttri", "Products", new { id = Model.Id })
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pd_policies_wrapper">

                            <div class="pd_policies style_2">
                                <div class="pd_policies_title">
                                    <h5>BẢO HÀNH TRỌN ĐỜI</h5> <span>Sản phẩm được bảo hành keo chỉ vĩnh viễn</span>
                                </div>
                                <ul class="unstyled">
                                    <li class="clearfix">
                                        <a href="#">
                                            <img src="~/Uploads/Images/inshop/vanchuyen.png" />
                                            <div class="policies_tit">	MIỄN PHÍ VẬN CHUYỂN</div> <br>
                                            <div class="policies_descrip"> Nội Thành tp.HCM</div>
                                        </a>
                                    </li>
                                    <li class="clearfix">
                                        <a href="#">
                                            <img src="~/Uploads/Images/inshop/thanhtoan.png" />
                                            <div class="policies_tit">	THANH TOÁN KHI NHẬN HÀNG</div> <br>
                                            <div class="policies_descrip"> Xem hàng vừa ý mới thanh toán</div>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>
                    </div>

                </div>
                <!-- Tabs -->

                <div class="tabs_section_container">

                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <div class="tabs_container" style="margin-top:0;">
                                    <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                                        <li class="tab active" data-active-tab="tab_1"><span>Mô tả sản phẩm</span></li>
                                        <li class="tab" data-active-tab="tab_2"><span>Đánh giá sản phẩm</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">

                                <!-- Tab Description -->

                                <div id="tab_1" class="tab_container active">
                                    <div class="row">
                                        @Html.Raw(Model.Detail)
                                    </div>
                                </div>
                                <div id="tab_2" class="tab_container">
                                    <div class="row">
                                        <div class="col-lg-6 reviews_col">
                                            @Html.Action("Partial_Load_Review", "Review", new { productID = Model.Id })
                                        </div>

                                        <div class="col-lg-6 add_review_col">
                                            @*review*@
                                            @Html.Action("Partial_Review", "Review", new { productID = Model.Id })
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="col text-center">
            <div class="section_title new_arrivals_title">
                <h2>Sản phẩm tương tự</h2>
            </div>
        </div>
        <div class="container main_content">
            <div class="products_iso">
                <div class="row">
                    <div class="col">
                        <div class="product-grid">
                            @Html.Action("Partial_ProductCategory", "Products", new { id = Model.ProductCategoryID })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
