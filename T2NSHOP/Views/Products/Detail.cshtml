    <script src="~/Scripts/jsShop/detaiProduct.js"></script>
    <script>
        $(document).ready(function () {
            //ShowModal Hướng dẫn chọn size
            $('body').on('click', '.btnchonsize', function () {
                
                var titles = $('.product-details').data('title');
                if (titles.includes("Giày"))
                {
                    $('#modal-SizeGiay').modal('show');
                }
                else {
                    $('#modal-SizeAo').modal('show');
                }
            });
        });
