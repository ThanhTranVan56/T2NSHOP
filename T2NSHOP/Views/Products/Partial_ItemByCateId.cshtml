@model IEnumerable<T2NSHOP.Models.EF.Product>
@using T2NSHOP.Common
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImage = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImage = img.Image;
        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <a href="/chi-tiet/@item.Alias-p@(item.Id)">
                    <div class="product_image">
                        <img src="@strImage" alt="@item.Title">
                    </div>
                    <div class="favorite favorite_left"></div>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                    }
                    <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>
                    <div class="product_info">
                        <h6 class="product_name"><a href="/chi-tiet/@item.ProductCategory.Alias-p@(item.Id)">@item.Title</a></h6>
                        @if (item.PriceSale > 0)
                        {
                            <div class="product_price">@Common.FormatNumber(item.PriceSale, 0)<span>@Common.FormatNumber(item.Price, 0)</span></div>
                            <div style="display:none;" class="in_product_price">@item.PriceSale</div>
                        }
                        else
                        {
                            <div class="product_price">@Common.FormatNumber(item.Price, 0)</div>
                            <div style="display:none;" class="in_product_price">@item.Price</div>
                        }
                    </div>
                </a>

            </div>
            @*<div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>*@
        </div>
    }
}