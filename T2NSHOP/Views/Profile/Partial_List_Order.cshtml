@model IEnumerable<T2NSHOP.Models.EF.Order>
@using T2NSHOP.Common
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="hi_pu">
            <div class="li_pu">
                <div>Đơn hàng : @item.Code</div>
                <div class="tr_th">@GettingType.GetStatusOrder(item.StatusOrder)</div>
            </div>
            <div class="bd"></div>
            @Html.Action("Partial_Item_OrderDetail", "Profile", new { code = item.Code })
            <div class="bd_2"></div>
        </div>
        <div class="total_pu">
            <div class="total_dis">
                <label style="font-weight: 400;">
                    Thành tiền:
                </label>
                <div class="total_pr">
                    ₫@(Common.FormatNumber(item.TotalAmount))
                </div>
            </div>
        </div>
        <div class="re_pu">
            <div class="space_pu">

            </div>
            <section class="button_pu">
                <div class="contact">
                    <div>
                        <button class="ds_button">Liên hệ Người bán</button>
                    </div>
                </div>
                <div class="repurchase">
                    <div>
                        <button class="ds_button">Mua lại</button>
                    </div>
                </div>
            </section>
        </div>


        <div class="line_pu"></div>
    }
}

