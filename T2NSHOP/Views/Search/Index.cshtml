@model IEnumerable<T2NSHOP.Models.EF.Product>
@using T2NSHOP.Common
@{
    ViewBag.Title = "Tìm kiếm sản phẩm";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="/san-pham"><i class="fa fa-angle-right" aria-hidden="true"></i>@ViewBag.Title</a></li>
                </ul>
            </div>
            <div class="sidebar">
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Tìm theo danh mục sản phẩm</h5>
                    </div>
                    @Html.Action("MenuLeftSearch", "Menu")
                </div>

                <!-- Price Range Filtering -->
                <div class="sidebar_section">
                    <div class="sidebar_title">
                        <h5>Tìm theo giá</h5>
                    </div>
                    <p>
                        <input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;">
                    </p>
                    <div id="slider-range"></div>
                    <div class="filter_button"><span>Tìm</span></div>
                </div>



            </div>

            <!-- Main Content -->

            <div class="main_content">

                <!-- Products -->

                <div class="products_iso">
                    <div class="row">
                        <div class="col">

                            @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { }))
                            {
                                @Html.AntiForgeryToken()<form class="form-inline">
                                    <div class="input-group input-group-sm">
                                        <input class="form-control form-control-navbar" id="searchdb" style="min-width: 400px; max-width: 400px; border-color: #80bdff" type="text" name="Searchtext" placeholder="Search">

                                        <div class="input-group-append" style="border-left:0px;">
                                            <button class="btn btn-navba " id="searchdb-btn" type="submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>
                                        @if (ViewBag.Error != null) { 
                                       
                                        }
                                        else
                                        {
                                            <p style="margin-top: 10px; margin-left: 20px;">@ViewBag.Notification</p>
                                        }
                                    </div>
                                </form>
                            }
                            <div class="product-grid">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        var strImage = "";
                                        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                                        if (img != null)
                                        {
                                            strImage = img.Image;
                                        }
                                        <div class="product-item @item.ProductCategory.Alias">
                                            <div class="product discount product_filter">
                                                <a href="/chi-tiet/@item.Alias-p@(item.Id)">
                                                    <div class="product_image">
                                                        <img src="@strImage" alt="@item.Title">
                                                    </div>
                                                    <div class="favorite favorite_left"></div>
                                                    @if (item.PriceSale > 0)
                                                    {
                                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                                                    }
                                                    <div class="product_info">
                                                        <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                                                        @if (item.PriceSale > 0)
                                                        {
                                                            <div class="product_price">@Common.FormatNumber(item.PriceSale, 0)<span>@Common.FormatNumber(item.Price, 0)</span></div>
                                                            <div style="display:none;" class="in_product_price">@item.PriceSale</div>
                                                        }
                                                        else
                                                        {
                                                            <div class="product_price">@Common.FormatNumber(item.Price, 0)</div>
                                                            <div style="display:none;" class="in_product_price">@item.Price</div>
                                                        }
                                                    </div>
                                                </a>
                                            </div>
                                            @*<div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>*@
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Action("Partial_Subcrice", "Home")
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        $(document).ready(function () {
            var hasError = @((ViewBag.Error != null).ToString().ToLower());
            if (hasError) {
                $(document).ready(function () {
                    errorMessage();
                });
            }
        });
        function errorMessage() {
            $(document).Toasts('create', {
                title: 'Thông báo',
                class: 'bg-danger',
                autohide: true,
                delay: 1300,
                body: 'Vui lòng không nhập kí tự đặc biệt'
            });
            
        }
    </script>

}

